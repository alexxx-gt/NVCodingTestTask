@model IEnumerable<NVCodingTestTask.ViewModels.UserViewModel>

@{
    ViewBag.Title = "List Users";
}

<h2>List Users</h2>

<p>
    @Html.ActionLink("Create New", "CreateUser")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Avatar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SkypeLogin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Signature)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "EditUser", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.Avatar))
                {
                    <img src="@item.Avatar" alt="User avatar here" height="100" width="100"/>
                }
                else
                {
                    <div>User avatar is absent</div>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkypeLogin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Signature)
            </td>
        </tr>
    }

</table>
